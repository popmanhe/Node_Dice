

    <div class="form-group">
        <label for="balance">Balance</label>
        <div class="input-group">
            <span class="input-group-addon">
                <span class="dropdown-toggle hand" data-toggle="dropdown" data-bind="text: coinName"></span>
                <ul class="dropdown-menu square primary margin-list-rounded with-triangle">
                    <li><a data-bind="click: switchCoins.bind($data,'BTC')">BTC</a></li>
                    <li><a data-bind="click: switchCoins.bind($data,'NXT')">NXT</a></li>
                </ul> <span class="caret"></span>
            </span>
            <input type="text" data-bind="value: balance, click: copyBalance" class="form-control hand" readonly="readonly" />
            <span class="input-group-addon hand" data-bind="click: refreshBalance"><i class="fa fa-refresh" title="Refresh balance"></i></span>
        </div>
    </div>
    <div class="form-group">
        <label>BET AMOUNT</label>
        <div class="input-group">
            <span class="input-group-addon">
                <span class="dropdown-toggle hand" data-toggle="dropdown" data-bind="text: coinName"></span>
                <ul class="dropdown-menu square primary margin-list-rounded with-triangle">
                    <li><a data-bind="click: switchCoins.bind($data,'BTC')">BTC</a></li>
                    <li><a data-bind="click: switchCoins.bind($data,'NXT')">NXT</a></li>
                </ul> <span class="caret"></span>
            </span>            <input class="form-control" data-bind="value: betAmount" min="0,00000001" />
            <span class="input-group-addon hand" data-bind="click: amountX2">2x</span>
            <span class="input-group-addon hand" data-bind="click: amountDiv2">/ 2</span>
            <span class="input-group-addon hand" data-bind="click: minAmount">Min</span>
            <span class="input-group-addon hand" data-bind="click: maxAmount">Max</span>
        </div>
        <span class="help-block" data-bind="html: amountdesc"></span>
    </div>
    <div class="form-group">
        <label>PAYOUT</label>
        <div class="input-group">
            <span class="input-group-addon">
                <span class="dropdown-toggle hand" data-toggle="dropdown" data-bind="text: coinName"></span>
                <ul class="dropdown-menu square primary margin-list-rounded with-triangle">
                    <li><a data-bind="click: switchCoins.bind($data,'BTC')">BTC</a></li>
                    <li><a data-bind="click: switchCoins.bind($data,'NXT')">NXT</a></li>
                </ul> <span class="caret"></span>
            </span>
            <input class="form-control" data-bind="value: payout" readonly="readonly" />
            <span class="input-group-addon">1% Edge</span>
        </div>
    </div>
    <div class="form-group">
        <label>PROFIT ON WIN</label>
        <div class="input-group">
            <span class="input-group-addon">
                <span class="dropdown-toggle hand" data-toggle="dropdown" data-bind="text: coinName"></span>
                <ul class="dropdown-menu square primary margin-list-rounded with-triangle">
                    <li><a data-bind="click: switchCoins.bind($data,'BTC')">BTC</a></li>
                    <li><a data-bind="click: switchCoins.bind($data,'NXT')">NXT</a></li>
                </ul><span class="caret"></span>
            </span>
            <input class="form-control" data-bind="value: profitOnWin" readonly="readonly" />
        </div>
    </div>
   